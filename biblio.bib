@Article{Arkhipov2018,
  author       = {Arkhipov, Anton and Gouwens, Nathan W and Billeh, Yazan N and Gratiy, Sergey and Iyer, Ramakrishnan and Wei, Ziqiang and Xu, Zihao and Abbasi-Asl, Reza and Berg, Jim and Buice, Michael and Cain, Nicholas and da Costa, Nuno and de Vries, Saskia and Denman, Daniel and Durand, Severine and Feng, David and Jarsky, Tim and Lecoq, JÃ©rÃ´me and Lee, Brian and Li, Lu and Mihalas, Stefan and Ocker, Gabriel K and Olsen, Shawn R and Reid, R Clay and Soler-Llavina, Gilberto and Sorensen, Staci A and Wang, Quanxin and Waters, Jack and Scanziani, Massimo and Koch, Christof},
