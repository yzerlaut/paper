@Article{Hires2013a,
  author          = {Hires, S Andrew and Efros, Alexander L and Svoboda, Karel},
  title           = {Whisker dynamics underlying tactile exploration.},
  journal         = {The Journal of neuroscience : the official journal of the Society for Neuroscience},
